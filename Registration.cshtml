@model OLXProject.Models.RegistrationModel

@{
    ViewBag.Title = "Registration";
}

<h2>Registration</h2>
<div class="formbold-main-wrapper">

    <div class="formbold-form-wrapper">

        <img src="~/Image/OLX-Logo.png" style="height: 150px; width: 200px; margin: 0; padding: 5px;" class="class=" img-fluid"">

        <form method="POST">
            <div class="formbold-form-title">
                <h2 class="">Register now</h2>

            </div>

            <div class="formbold-input-flex">
                <div>
                    <label class="formbold-form-label">
                        First Name
                    </label>
                    @Html.TextBoxFor(e => e.firstName, new { @class = "formbold-form-input" })
                    @Html.ValidationMessageFor(e => e.firstName)
                </div>
                <div>
                    <label class="formbold-form-label"> Last Name </label>
                    @Html.TextBoxFor(e => e.lastName, new { @class = "formbold-form-input" })
                    @Html.ValidationMessageFor(e => e.lastName)
                </div>
            </div>

            <div class="formbold-input-flex">
                <div>
                    <label class="formbold-form-label"> Email </label>
                    @Html.TextBoxFor(e => e.userEmail, new { @class = "formbold-form-input" })
                    @Html.ValidationMessageFor(e => e.userEmail)
                </div>

                <div>
                    <label class="formbold-form-label"> Phone Number </label>
                    @Html.TextBoxFor(e => e.MobileNo, new { @class = "formbold-form-input" })
                    @Html.ValidationMessageFor(e => e.MobileNo)
                </div>
            </div>

            <div class="formbold-mb-3">
                <label class="formbold-form-label">
                    Address
                </label>
                @Html.TextAreaFor(e => e.Address, new { @class = "formbold-form-input" })
                @Html.ValidationMessageFor(e => e.Address)
            </div>

            <div class="formbold-mb-3">
                <label class="formbold-form-label">
                    city
                </label>

                @Html.DropDownListFor(model => model.City, new SelectList(new[]
                {
                    new SelectListItem { Value = "Select City", Text = "Select City" },
                    new SelectListItem { Value = "Ahmedabad", Text = "Ahmedabad" },
                    new SelectListItem { Value = "Surat", Text = "Surat" },
                    new SelectListItem { Value = "Vadodara", Text = "Vadodara" },
                    new SelectListItem { Value = "Rajkot", Text = "Rajkot" }
                }, "Value", "Text"), new { @class = "formbold-form-input" })

            </div>

            <div class="formbold-input-flex">
                <div>

                    <label class="formbold-form-label"> Gender </label>

                    @Html.RadioButtonFor(e => e.Gender, "Male")<span> Male </span><br /><br />
                    @Html.RadioButtonFor(e => e.Gender, "Female")<span> Female </span>

                </div>

            </div>

            <div class="formbold-input-flex">
                <div>
                    <label class="formbold-form-label"> Password </label>
                    @Html.PasswordFor(e => e.Password, new { id = "Password", @class = "formbold-form-input" })  
                   @Html.ValidationMessageFor(e => e.Password)

                </div>

            </div>

            <div class="formbold-checkbox-wrapper">
                <label class="formbold-checkbox-label">
                    @*<div class="formbold-relative">*@
                        <input type="checkbox"
                               id="supportcheckbox"
                               class="formbold-input-checkbox" />
                        @*<div class="formbold-checkbox-inner">*@
                            <span class="formbold-opacity-0">
                                <svg width="11"
                                     height="8"
                                     viewBox="0 0 11 8"
                                     fill="none"
                                     class="formbold-stroke-current">
                                    <path d="M10.0915 0.951972L10.0867 0.946075L10.0813 0.940568C9.90076 0.753564 9.61034 0.753146 9.42927 0.939309L4.16201 6.22962L1.58507 3.63469C1.40401 3.44841 1.11351 3.44879 0.932892 3.63584C0.755703 3.81933 0.755703 4.10875 0.932892 4.29224L0.932878 4.29225L0.934851 4.29424L3.58046 6.95832C3.73676 7.11955 3.94983 7.2 4.1473 7.2C4.36196 7.2 4.55963 7.11773 4.71406 6.9584L10.0468 1.60234C10.2436 1.4199 10.2421 1.1339 10.0915 0.951972ZM4.2327 6.30081L4.2317 6.2998C4.23206 6.30015 4.23237 6.30049 4.23269 6.30082L4.2327 6.30081Z"
                                          stroke-width="0.4"></path>
                                </svg>
                            </span>

                     
                    
                    I agree to the defined
                    <a href="#"> terms, conditions, and policies</a>
                </label>
            </div>

            <button type="submit" class="formbold-btn" onClick="onClick">Register Now</button>
        </form>
    </div>
</div>

